{
  "name": "kotlin-review",
  "displayName": "Kotlin Review",
  "description": "Kotlin language support for code review and small changes",
  "version": "0.74.0",
  "publisher": "kotlin-review",
  "license": "Apache-2.0",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#7F52FF",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kotlin-review/lsp-kotlin-review"
  },
  "bugs": {
    "url": "https://github.com/kotlin-review/lsp-kotlin-review/issues"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "kotlin",
    "language server",
    "code review",
    "lsp"
  ],
  "activationEvents": [
    "onLanguage:kotlin"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "kotlin",
        "aliases": ["Kotlin", "kotlin"],
        "extensions": [
          ".kt",
          ".kts"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "kotlin",
        "scopeName": "source.kotlin",
        "path": "./syntaxes/kotlin.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "kotlinReview.generateSources",
        "title": "Kotlin Review: Run Gradle Code Generation"
      },
      {
        "command": "kotlinReview.selectBuildVariant",
        "title": "Kotlin Review: Select Android Build Variant"
      },
      {
        "command": "kotlinReview.selectPrimaryTarget",
        "title": "Kotlin Review: Select Primary KMP Target"
      }
    ],
    "configuration": {
      "title": "Kotlin Review",
      "properties": {
        "kotlinReview.java.home": {
          "type": "string",
          "default": "",
          "description": "Path to Java runtime (11+). If empty, uses JAVA_HOME or PATH."
        },
        "kotlinReview.server.jvmArgs": {
          "type": "string",
          "default": "",
          "description": "Additional JVM arguments for the language server."
        },
        "kotlinReview.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Trace communication between VS Code and the language server."
        },
        "kotlinReview.android.buildVariant": {
          "type": "string",
          "default": "debug",
          "description": "Android build variant for generated sources and classpath resolution (e.g., debug, release, stagingDebug)."
        },
        "kotlinReview.android.autoGenerate": {
          "type": "boolean",
          "default": false,
          "description": "Automatically run Gradle code generation after saving Kotlin files in Android projects."
        }
      }
    }
  },
  "scripts": {
    "build": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.0"
  }
}
